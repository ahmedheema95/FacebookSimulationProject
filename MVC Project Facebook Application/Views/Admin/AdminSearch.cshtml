


@{
    Layout = "~/Views/Shared/layout.cshtml";
}

<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#CreateModal">
    Create User
</button>

<button type="button" class="btn btn-secondary" data-toggle="modal" data-target="#AddRoleModal" id="AddRole">
    Create Role
</button>

<div class="modal fade" id="CreateModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Create a new account</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <partial name="CreateUserFormView" />
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="AddRoleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Create a new Role</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body role-body">

            </div>
        </div>
    </div>
</div>


<div class="modal fade" id="ChangeRoleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Change Role</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body change-role-body">

            </div>
        </div>
    </div>
</div>


<br />
<br />
<input class="form-control" type="text" placeholder="Search" id="adminSearchArea">

<div>
    <table class="table" style="display:none">
        <thead>
            <tr>
                <th scope="col">UserName</th>
                <th scope="col">Status</th>
                <th scope="col">Role</th>
                <th></th>
            </tr>
        </thead>
        <tbody id="SearchResults">
        </tbody>
    </table>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
<script src="~/lib/jquery/dist/jquery.js"></script>
<script type="text/javascript" src="~/js/AdminSearch.js"></script>


